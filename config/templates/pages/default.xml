<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>corporate_default</key>
    <view>@CorporateTemplate/pages/default</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>2400</cacheLifetime>
    
    <meta>
        <title lang="en">Corporate Default</title>
        <title lang="es">Página Corporativa</title>
    </meta>
    
    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="es">Título</title>
            </meta>
            <tag name="sulu.rlp.part"/>
        </property>
        
        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">URL</title>
                <title lang="es">URL</title>
            </meta>
            <tag name="sulu.rlp"/>
        </property>
        
        <block name="blocks" default-type="content" minOccurs="0">
            <meta>
                <title lang="en">Content Blocks</title>
                <title lang="es">Bloques de Contenido</title>
            </meta>
            
            <types>
                <type name="content">
                    <meta>
                        <title lang="en">Content</title>
                        <title lang="es">Contenido</title>
                    </meta>
                    
                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="es">Título</title>
                            </meta>
                        </property>
                        
                        <property name="description" type="text_editor">
                            <meta>
                                <title lang="en">Description</title>
                                <title lang="es">Descripción</title>
                            </meta>
                        </property>
                    </properties>
                </type>
                
                <type name="hero">
                    <meta>
                        <title lang="en">Hero Section</title>
                        <title lang="es">Sección Hero</title>
                    </meta>
                    
                    <properties>
                        <property name="title" type="text_line" mandatory="true">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="es">Título</title>
                            </meta>
                        </property>
                        
                        <property name="subtitle" type="text_line">
                            <meta>
                                <title lang="en">Subtitle</title>
                                <title lang="es">Subtítulo</title>
                            </meta>
                        </property>
                        
                        <property name="buttonText" type="text_line">
                            <meta>
                                <title lang="en">Button Text</title>
                                <title lang="es">Texto del Botón</title>
                            </meta>
                        </property>
                        
                        <property name="buttonLink" type="text_line">
                            <meta>
                                <title lang="en">Button Link</title>
                                <title lang="es">Enlace del Botón</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
